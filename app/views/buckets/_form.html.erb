	<%= form_for @bucket do |f| %>
	  <%= f.text_field :name, placeholder: "name", size: 50 %>
	  <%= f.select(:privacy, options_for_select([['private', 'private'], ['public', 'public'], ['group', 'group']])) %><br>
	  <%= f.fields_for :hashtags do |h| %>
    	<%= h.text_field :tag, placeholder: "hashtags (ex. #hash #hash two #hash three)", size: 50 %>
  	<% end %>
	  <%= f.submit "Create New Bucket" %>
	<% end %>