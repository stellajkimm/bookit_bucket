<%= link_to bucket_path(bucket) do %>
	<div class="bucket <%= 'current_user_' if bucket.creator == current_user && bucket.privacy == "private" %><%= bucket.privacy %>">
		<strong><%= bucket.name %> by <%= bucket.creator.full_name %></strong>
		<ul>
			<% short_list(bucket.id).each do |item| %>
				<li><%= item.name %></li>
			<% end %>
		</ul>
		<h5><%= "... and more" if bucket.items.length > 5 %></h5>
		<% bucket.hashtags.each do |tag| %>
			<%= link_to "#" + tag.tag, hashtag_path(tag) %> 
		<% end %>
	</div>
<% end %>