<h3>CREATE NEW BUCKET</h3>
<br>
	<%= form_for @new_bucket do |f| %>
	  <%= f.text_field :name, placeholder: "name", size: 55 %>
	  <%= f.select(:privacy, options_for_select([['private', 'private'], ['public', 'public'], ['group', 'group']], :selected => @type_of_bucket)) %><br><br>
	  <%= f.fields_for :hashtags do |h| %>
    	<%= h.text_field :tag, placeholder: "hashtags (ex. #hash #hash two #hash three)", size: 65 %>
  	<% end %><br><br>
	  <%= f.submit "CREATE NEW BUCKET", class: "btn btn-default" %>
	<% end %>
<br><br>