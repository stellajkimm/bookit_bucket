<div class="container">
	<div class="inner-container yellow5">
		<h1><%= @type_of_bucket.upcase + "  " %>BUCKETS</h1>
	</div>
	<div class="inner-container divide white"></div>
		<% if @buckets.length > 0 %>
			<% @buckets.each do |bucket| %>
					<%= render partial: "bucket", locals: { bucket: bucket } %>
			<% end %>
			<% if !@followed_buckets.nil? %>
				<% @followed_buckets.each do |bucket| %>
						<%= render partial: "bucket", locals: { bucket: bucket } %>
				<% end %>
			<% end %>
			<% if @number_of_buckets % 4 != 0 %>
				<% (4-(@number_of_buckets % 4)).times do %>
					<div class="bucket col-sm-3 col-xs-4 yellow<%= rand(1..5) %>"></div>
				<% end %>
			<% end %>
		<% else %>
			<div class="inner-container white center">
				<h2 class="font2">You do not have any <%= @type_of_bucket %> buckets yet!</h2>
				<br>
				<% if @type_of_bucket == "archive" || @type_of_bucket == "following" %>
					<button class="btn btn-default"><%= link_to "VIEW ALL BUCKETS", buckets_home_path %></button>
				<% else %>
					<button class="btn btn-default" data-toggle="modal" data-target= "#create">CREATE NEW BUCKET</button>
				<% end %>
			</div>
			<div class="inner-container divide white"></div>
		<% end %>
	</div>
</div>