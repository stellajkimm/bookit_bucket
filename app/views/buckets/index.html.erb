<div class="container">

	<% #render partial: "carousel" %>
	<div class="inner-container divider yellow5"></div>

	<div class="inner-container white font1">
		<h1 >BOOKIT BUCKET</h1>
		<h2 class="font2">Create bucket lists.  Share it with friends.  Look at what your friends are dying to do!  Make bucket lists with friends and plan events together.  You'll never have a day where you can't think of something to do!</h2>
	</div>

	<% @buckets.each do |bucket| %>
		<%= render partial: "bucket", locals: { bucket: bucket} %>
	<% end %>
	<% if @buckets.size % 4 != 0 %>
		<% (4-(@buckets.size % 4)).times do %>
			<div class="bucket col-sm-3 col-xs-4 yellow<%= rand(1..5) %>"></div>
		<% end %>
	<% end %>
</div>