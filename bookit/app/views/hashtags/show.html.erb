<div class="container">

	<div class="inner-container yellow5">
		<h1>#<%= @hashtag.tag %></h1>
	</div>

	<div class="inner-container white">
	  <form class="form-group" role="search">
      <input type="text" class="form-control" placeholder="(ex. #another hashtag)">
    	<input type="submit" class="btn btn-default" value="Search"></input>
    </form>
	</div>

	<% @hashtag.buckets.each do |bucket| %>
		<%= render partial: "buckets/bucket", locals: { bucket: bucket} %>
	<% end %>
	<% if @hashtag.buckets.size % 3 != 0 %>
		<% (3-(@hashtag.buckets.size % 3)).times do %>
			<div class="bucket col-sm-4 col-xs-6 yellow<%= rand(1..5) %>"></div>
		<% end %>
	<% end %>
</div>