<h3>SIGN UP FOR BOOKITBUCKET</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), id: "signup_form") do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.email_field :email, autofocus: true, placeholder: "email", size: 30 %></div>
  <div><%= f.text_field :username, placeholder: "username", size: 30 %></div>

  <div><% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %>
    <%= f.password_field :password, autocomplete: "off", placeholder: "password", size: 30 %></div>

  <div><%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "password confirmation", size: 30 %></div>
    <br>

  <div class="modal-footer"><%= f.submit "SIGN UP", class: "btn btn-default" %></div>
<% end %>

