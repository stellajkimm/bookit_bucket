<div class="container">
	<div class="inner-container yellow5">
		<h1>ALL YOUR BUCKETSSSS YAAAAAAAAAA</h1>
	</div>
	<div class="inner-container divider white"></div>
	<% @buckets.each do |bucket| %>
			<%= render partial: "bucket", locals: { bucket: bucket } %>
	<% end %>
	<% if @buckets.size % 3 != 0 %>
		<% (3-(@buckets.size % 3)).times do %>
			<div class="bucket col-sm-4 col-xs-6 yellow<%= rand(1..5) %>"></div>
		<% end %>
	<% end %>
</div>