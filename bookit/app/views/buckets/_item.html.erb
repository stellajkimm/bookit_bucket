<div class="item <%= item.status %>"> 
	<div class="panel panel-default">
	  <% if bucket.privacy == "group" %>
	  	<a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= item.id %>">
	  <% end %>
		  <div class="panel-heading">
		    <div class="float-left">
		    <h4 class="panel-title">
	        <%= item.name %><%= " - " + item.location if !item.location.empty? %>
		    </h4>
		    </div>
		    <div class="float-right">
	      <% item.attendees.each do |attendee| %>
					<%= image_tag attendee.picture, height: "20px" %>
				<% end %>
				</div>
		  </div>

		<% if bucket.privacy == "group" %></a>
	  <div id="collapse<%= item.id %>" class="panel-collapse collapse float-clear">
	    <div class="panel-body">
	    	<% if item.attendees.length > 0 %>
		    	Attendees: <br>
		    	<% item.attendees.each do |attendee| %>
						<%= image_tag attendee.picture, height: '20px' %>
						<%= link_to attendee.full_name, user_path(attendee) %><br>
					<% end %>
				<% end %>
				<br>
				<% if item.attendees.include?(current_user) %>
					<button class="btn btn-default"><%= link_to "UNATTEND" %></button>
					<button class="btn btn-default"><%= link_to "MARK DONE" %></button>
				<% else %>
					<button class="btn btn-default"><%= link_to "ATTEND" %></button>
				<% end %>
					<button class="btn btn-default"><%= link_to "DELETE" %></button>
	    </div>
	  </div>
  	<% end %>
	</div>
</div> 