<div class="container">

	<h1><%= @bucket.name %> by <%= @bucket.creator.first_name + " " + @bucket.creator.last_name %></h1>

	<h3>Owners: </h3>
	<ul>
	<% @bucket.owners.each do |owner| %>
		<li><%= owner.first_name + " " + owner.last_name %></li>
	<% end %>
	</ul>
	
	<h3>Privacy: <%= @bucket.privacy %></h3>

	<% @items.each do |item| %>
		<div class="item <%= item.status %>">
			<%= link_to item.name, bucket_item_path(@bucket, item) %> - <%= item.location %>
			<% item.attendees.each do |attendee| %>
				<%= image_tag attendee.picture, height: "20px" %>
				<%= attendee.first_name + " " + attendee.last_name %>
			<% end %>
		</div>
	<% end %>
	<br>
	<% #<button>Add Item</button> %>
	<%= render partial: "items/new" %>

</div>

<% @bucket.hashtags.each do |tag| %>
	<%= link_to "##{tag.tag}", hashtag_path(tag) %>
<% end %>